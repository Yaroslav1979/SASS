<div class="page">

    <div class="header">     
      {{#with header}}
           <header class="header__content">

            <div class="header__block">
              <img src="/img/svg/apple.svg" alt="Apple" class="header__icon">
              
              <nav class="header__block">
                {{#each links}}
                  <a href="{{url}}" class="header__link">{{text}}</a>
                {{/each}}
              </nav>
              
            </div>

            <div class="header__block">
              <img src="/img/svg/search.svg" alt="Search" class="header__icon">
              <img src="/img/svg/profile.svg" alt="Profile" class="header__icon">
            </div>  
            </header>
        {{/with}}
    </div>

  <header class="header-light">
      {{#with header}}  
          
            {{#with ad}}
            <div class=" header__content ">
              <p class="header-text header__block">{{title}}</p>
              {{#with link}}
              <a class="header__icon product__link header__block" href="{{url}}">{{text}} </a>
              {{/with}}
